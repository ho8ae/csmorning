generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  kakaoId             String?              @unique
  nickname            String?
  profileImage        String?
  isSubscribed        Boolean              @default(false)
  totalAnswered       Int                  @default(0)
  correctAnswers      Int                  @default(0)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  email               String?              @unique
  password            String?
  role                UserRole             @default(user)
  isTemporary         Boolean              @default(false)
  ageGroup            String?
  birthDate           DateTime?
  birthYear           Int?
  gender              String?
  name                String?
  phoneNumber         String?
  isPremium           Boolean              @default(false)
  premiumUntil        DateTime?
  activityCalendar    ActivityCalendar[]
  discussionComments  DiscussionComment[]
  discussionReactions DiscussionReaction[]
  donations           Donation[]
  responses           Response[]
  kakaoMappings       UserKakaoMapping[]
}

model Question {
  id             Int             @id @default(autoincrement())
  text           String
  options        Json
  correctOption  Int
  explanation    String
  category       String
  difficulty     String          @default("medium")
  active         Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  description    String?
  dailyQuestions DailyQuestion[]
}

model DailyQuestion {
  id         Int        @id @default(autoincrement())
  questionId Int
  sentDate   DateTime   @default(now())
  question   Question   @relation(fields: [questionId], references: [id])
  responses  Response[]
}

model Response {
  id              Int           @id @default(autoincrement())
  userId          Int
  dailyQuestionId Int
  answer          Int
  isCorrect       Boolean
  respondedAt     DateTime      @default(now())
  dailyQuestion   DailyQuestion @relation(fields: [dailyQuestionId], references: [id])
  user            User          @relation(fields: [userId], references: [id])
}

model Donation {
  id         Int       @id @default(autoincrement())
  userId     Int
  amount     Int       @default(3000)
  tid        String?
  orderCode  String    @unique
  status     String    @default("ready")
  message    String?
  approvedAt DateTime?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id])
}

model AppConfig {
  key       String   @id
  value     String
  updatedAt DateTime @default(now()) @updatedAt
}

model UserKakaoMapping {
  id             Int       @id @default(autoincrement())
  userId         Int
  kakaoChannelId String    @unique
  kakaoId        String?
  linkCode       String?
  linkCodeExpiry DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id])
}

model ActivityCalendar {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      DateTime @db.Date
  count     Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

model Discussion {
  id          Int                  @id @default(autoincrement())
  title       String
  description String
  type        String
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  comments    DiscussionComment[]
  reactions   DiscussionReaction[]
}

model DiscussionComment {
  id           Int                  @id @default(autoincrement())
  discussionId Int
  userId       Int
  content      String
  stance       String?
  parentId     Int?
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  discussion   Discussion           @relation(fields: [discussionId], references: [id], onDelete: Cascade)
  parent       DiscussionComment?   @relation("CommentReplies", fields: [parentId], references: [id])
  replies      DiscussionComment[]  @relation("CommentReplies")
  user         User                 @relation(fields: [userId], references: [id])
  reactions    DiscussionReaction[]
}

model DiscussionReaction {
  id           Int                @id @default(autoincrement())
  discussionId Int
  userId       Int
  commentId    Int?
  emoji        String
  createdAt    DateTime           @default(now())
  comment      DiscussionComment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  discussion   Discussion         @relation(fields: [discussionId], references: [id], onDelete: Cascade)
  user         User               @relation(fields: [userId], references: [id])

  @@unique([userId, discussionId, commentId, emoji])
}

enum UserRole {
  user
  admin
}
